    dict_nml["domains"]["dx"] = 6000
    dict_nml["domains"]["dy"] = 6000
    dict_nml["domains"]["grid_id"] = 1
    dict_nml["domains"]["parent_id"] = 0
    dict_nml["domains"]["i_parent_start"] = 1
    dict_nml["domains"]["j_parent_start"] = 1
    dict_nml["domains"]["parent_grid_ratio"] = 1
    dict_nml["domains"]["parent_time_step_ratio"] = 1
    dict_nml["domains"]["feedback"] = 1
    dict_nml["domains"]["smooth_option"] = 0
    dict_nml["domains"]["eta_levels"] = [
        1.000, 0.9973, 0.9947, 0.9921, 0.9895,
        0.9869, 0.9843, 0.9816, 0.979, 0.97645,
        0.9739, 0.9687, 0.9635, 0.956, 0.9485,
        0.9389, 0.9294, 0.9182, 0.907, 0.8944,
        0.8818, 0.8543, 0.825, 0.7945, 0.763,
        0.7311, 0.699, 0.6669, 0.6352, 0.604,
        0.5735, 0.5437, 0.5148, 0.4869, 0.4599,
        0.4339, 0.4089, 0.3848, 0.3617, 0.3394,
        0.3179, 0.2972, 0.2772, 0.2578, 0.239,

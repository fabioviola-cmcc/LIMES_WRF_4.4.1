    dict_nml["physics"]["alevsiz"] = 12
    dict_nml["physics"]["no_src_types"] = 6
    dict_nml["physics"]["bl_pbl_physics"] = 1
    dict_nml["physics"]["sf_sfclay_physics"] = 11
    dict_nml["physics"]["sf_surface_physics"] = 2
